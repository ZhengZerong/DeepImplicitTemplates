{
  "Description" : "This experiment learns a shape representation for planes using data from ShapeNet version 2.",
  "DataSource" : "../ShapeNet/DeepSDF",
  "TrainSplit": "examples/splits/sv2_planes_train.json",
  "TestSplit": "examples/splits/sv2_planes_test.json",
  "NetworkArch" : "deep_implicit_template_decoder",
  "NetworkSpecs" : {
    "warper_kargs": {
      "hidden_size": 512,
      "steps": 8
    },
    "decoder_kargs": {
      "dims": [256, 256, 256, 256, 256],
      "dropout": [0, 1, 2, 3, 4],
      "dropout_prob": 0.05,
      "norm_layers": [0, 1, 2, 3, 4],
      "xyz_in_all": false,
      "weight_norm": true
    }
    },
  "CodeLength" : 256,
  "NumEpochs" : 2001,
  "SnapshotFrequency" : 1000,
  "AdditionalSnapshots" : [ 100, 500 ],
  "LearningRateSchedule" : [
    {
      "Type" : "Step",
      "Initial" : 0.0005,
      "Interval" : 500,
      "Factor" : 0.5
    },
    {
      "Type" : "Step",
      "Initial" : 0.001,
      "Interval" : 500,
      "Factor" : 0.5
    },
    {
      "Type" : "Step",
      "Initial" : 0.001,
      "Interval" : 500,
      "Factor" : 0.5
    }],
  "SamplesPerScene" : 5000,
  "ScenesPerBatch" : 24,
  "DataLoaderThreads" : 8,
  "ClampingDistance" : 0.1,
  "CodeRegularization" : true,
  "CodeRegularizationLambda" : 1e-4,
  "CodeBound" : 1.0,
  "UsePointwiseLoss": true,
  "PointwiseLossWeight": 0.005,
  "UsePointpairLoss": true,
  "PointpairLossWeight": 0.00002,
  "UseCurriculum": true
}
